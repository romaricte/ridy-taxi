{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["es2022"],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false,
    "target": "es2022",
    "module": "es2022",
    "paths": {
      "@ridy/database": ["libs/database/*"]
    }
  }
}
